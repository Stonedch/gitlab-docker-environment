# URL GitLab (домен или IP)
EXTERNAL_URL="http://localhost"

# Порты на хосте: HTTP, HTTPS, SSH для Git
HTTP_PORT="80"
HTTPS_PORT="443"
SSH_PORT="22"

# Каталог для данных GitLab (например . — текущая папка)
GITLAB_HOME="."

# --- Параметры экономии памяти (опционально) ---
# Ограничения контейнера (docker-compose)
GITLAB_MEM_LIMIT="2048m"
GITLAB_CPUS="2"
GITLAB_SHM_SIZE="64m"

# Отключение/включение компонентов
# Registry довольно прожорлив; по умолчанию отключен.
GITLAB_ENABLE_REGISTRY="false"

# Настройки Puma/Sidekiq (меньше значений = меньше RAM, но медленнее)
GITLAB_PUMA_WORKERS="0"
GITLAB_PUMA_MIN_THREADS="1"
GITLAB_PUMA_MAX_THREADS="2"
GITLAB_SIDEKIQ_CONCURRENCY="5"
